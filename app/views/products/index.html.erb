<h1>Техника</h1>
<table>
  <div id="user_nav">
    <% if user_signed_in? %>
      Logged in as <strong><%= current_user.email %></strong>
      <%= link_to 'Edit', edit_user_registration_path %>
      <%= link_to 'Logout',destroy_user_session_path, method: :delete, data: {confirm: 'Вы уверены ?'} %>
    <% else %>
      <%= link_to 'Sig in', new_user_registration_path %>
      <%= link_to 'Login', new_user_session_path %>
      <% end %>
      </div>
  <% @products.each do |product| %>
    <tr class="<%= cycle('list_line_odd', 'list_line_even') %>">
      <td>
        <%= image_tag(product.image_url, class: 'list_image') %>
      </td>
      <td class="list_description">
        <dl>
          <dt><%= product.title %></dt>
          <dd><%= product.description %></dd>
        </dl>
      </td>
      <td class="list_actions">
        <%= link_to 'Показать', product %><br/>
        <%= link_to 'Редактировать', edit_product_path(product) %><br/>
        <%= link_to 'Удалить', product, method: :delete,
                    data: { confirm: 'Вы уверены?' } %>
      </td>
    </tr>
  <% end %>
</table>
<br />
<%= link_to 'Новая техника', new_product_path %>
