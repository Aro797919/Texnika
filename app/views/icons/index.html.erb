<p style="color: green"><%= notice %></p>

<h1>Icons</h1>
<div id="user_nav">
<% if user_signed_in? %>
  Logged in as <strong><%= current_user.email %></strong>
  <%= link_to 'Edit', edit_user_registration_path %>
  <%= link_to 'Logout',destroy_user_session_path, method: :delete, data: {confirm: 'Вы уверены ?'} %>
<% else %>
  <%= link_to 'Sig in', new_user_registration_path %>
  <%= link_to 'Login', new_user_session_path %>
<% end %>
</div>
<div id="icons">
  <% @icons.each do |icon| %>
    <%= render icon %>
    <p>
      <%= link_to "Show this icon", icon %>
    </p>
  <% end %>
</div>

<%= link_to "New icon", new_icon_path %>
